                        <script src="~/Content/User/Scripts/owl-carousel/owl.carousel.min.js"></script>
                        <script src="~/Content/User/app/services/moduleServices.js"></script>
                        <script src="~/Content/User/app/controllers/moduleController.js"></script>
                        <!--Begin-->

                        <script type="text/javascript">
                            $(document).ready(function () {
                                var owl = $(".partner-block");
                                owl.owlCarousel({
                                    autoPlay: true,
