<script>
    $(document).ready(function () {
        $('#btnStatus1').click(function () {
        var update = $(this).val();
        
        $.ajax({
            url: '/Admin/Order/UpdateStatusOrder',
            type: 'post',
            data: { ID: @Model.OrderID },
            success: function (outData) {
                if (outData == 2)
                {
                    $("#status").text("Inprocess");
                    $("#status").removeClass("label-warning").addClass("label-info");
                    $("#btnStatus1").text("Close order");
                }
                else
                {
                    $("#status").text("Close");
                    $("#status").removeClass("label-info").addClass("label-success");
                    $("#updateBtn").remove();
                }
            }
        })
    })
    })

</script>

